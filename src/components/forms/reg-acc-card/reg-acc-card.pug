include ../../baseComponents


mixin regAccCard()

    form.reg-account-form.form-card(action='#')
        h1 Регистрация аккаунта

        fieldset
            +input-field('', {placeholder:'Имя'})
            +input-field('', {placeholder:'Фамилия'})
            fieldset.group-radio-btn
                label.radio-btn
                    input.visually-hidden(checked='' name='gender' type='radio')
                    span.radio-btn__custom
                    span.radio-btn__text Мужчина
                label.radio-btn
                    input.visually-hidden(name='gender' type='radio')
                    span.radio-btn__custom
                    span.radio-btn__text Женщина
        section
            label.title-label дата рождения
            +input-field('', {placeholder:'ДД.ММ.ГГГГ', pattern:'^(?:(?:31(\\/|-|\\.)(?:0?[13578]|1[02]|(?:Jan|Mar|May|Jul|Aug|Oct|Dec)))\\1|(?:(?:29|30)(\\/|-|\\.)(?:0?[1,3-9]|1[0-2]|(?:Jan|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec))\\2))(?:(?:1[6-9]|[2-9]\\d)?\\d{2})$|^(?:29(\\/|-|\\.)(?:0?2|(?:Feb))\\3(?:(?:(?:1[6-9]|[2-9]\\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\\d|2[0-8])(\\/|-|\\.)(?:(?:0?[1-9]|(?:Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep))|(?:1[0-2]|(?:Oct|Nov|Dec)))\\4(?:(?:1[6-9]|[2-9]\\d)?\\d{2})$'})

        fieldset
            legend.title-label данные для входа в сервис
            +input-field('',{type:'email', placeholder:'Email'})
            +input-field('',{type:'password', placeholder:'Пароль'})
            label.toggle-btn
                input.visually-hidden(checked='' type='checkbox')
                span.toggle-btn__custom
                |  Получать спецпредложения

        +button('перейти к оплате', '--finish', 'submit')

        fieldset.have-acc
            a.have-acc__text(href='#enter') Уже есть аккаунт на Toxin
            +linkButton('войти', '--empty', '#enter')
