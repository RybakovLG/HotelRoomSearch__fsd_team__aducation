
mixin navbar()

    .button-base.nav-burger(tabindex='0')
        svg(xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' aria-hidden='true' role='images' width='1.5em' height='1.5em' preserveAspectRatio='xMidYMid meet' viewBox='0 0 24 24' fill='currentColor')
            g(transform='translate(0 24) scale(1 -1)')
                g
                    rect(x='3' y='11' width='18' height='2' rx='.95' ry='.95')
                    rect(x='3' y='16' width='18' height='2' rx='.95' ry='.95')
                    rect(x='3' y='6' width='18' height='2' rx='.95' ry='.95')
        |           Меню
    ul.nav(tabindex='0')
        li.nav__item(data-text='О нас')
            a(href='#') О нас
        li(class='nav__item --expand' tabindex='0' data-text='Услуги')
            span Услуги
            ul.nav-expand-list(tabindex='0')
                each value in ['Услуга 12', 'Услуга 23', 'Услуга 42', 'Услуга 52', 'Услуга 22',]
                    li.nav-expand-list__item(data-text!= value)
                        a(href= "#")!= value

        li.nav__item(data-text='Вакансии')
            a(href='#') Вакансии
        li.nav__item(data-text='Новости')
            a(href='#') Новости
        li(class='nav__item --expand' tabindex='0' data-text='Соглашения')
            span Соглашения
            ul.nav-expand-list
                each value in ['Согласны 12', 'Согласны 23', 'Согласны 42', 'Согласны 52', 'Согласны 22','Согласны 242',]
                    li.nav-expand-list__item(data-text!= value)
                        a(href= "#")!= value